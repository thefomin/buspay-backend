generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id         String     @id @default(cuid())
  code       String     @unique          // уникальный код билета
  carrier    String                      // перевозчик
  busNumber  String                      // номер автобуса
  route      String                      // Точка A — Точка B
  regNumber  String                      // гос. номер транспорта
  price      Int                         // тариф
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  // Один билет — много оплат
  payments   Payment[]
}

model Payment {
  id           String    @id @default(cuid())
  ticketId     String
  telegramUser String    // ник или ID Telegram пользователя
  amount       Int       // сумма оплаты
  paidAt       DateTime  @default(now())

  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
}
